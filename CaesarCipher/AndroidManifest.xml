<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kloudier.CipherYourself"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="19" />

    <application
        android:allowBackup="false"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.cloudyear.caesarcipher.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                 <action android:name="android.intent.action.SEND" />
      		     <category android:name="android.intent.category.DEFAULT" />
       			 <data android:mimeType="text/plain" />
    		</intent-filter>
        </activity>
        <activity
            android:name="com.cloudyear.caesarcipher.Display_Settings"
            android:label="@string/title_activity_display__settings"
            android:parentActivityName="com.cloudyear.caesarcipher.MainActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.cloudyear.caesarcipher.MainActivity" />
        	
        </activity>
    </application>

</manifest>
